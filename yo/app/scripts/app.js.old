'use strict';

angular.module('sportTracker.services', [
  'ngCookies',
  'ngResource',
  'ngSanitize',
  'ngRoute'
]);

angular.module('sportTracker', ['sportTracker.services'])
  .config(['$routeProvider',
    function ($routeProvider) {
    
    $routeProvider
      .when('/widgets',{
        templateUrl: 'views/widgets.html',
        controller: 'WidgetCtrl'
      })
      .when('/login',{
        templateUrl: 'views/login.html',
        controller: 'LoginCtrl'
      })
      .when('/authorized',{
        templateUrl: 'views/authorized.html',
        controlller: 'MainCtrl'
      })
      .otherwise({
        redirectTo: '/login'
      });


  }]);
